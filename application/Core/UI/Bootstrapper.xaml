<UserControl x:Class="MORR.Core.UI.Bootstrapper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="clr-namespace:MORR.Core.UI.Controls.NotifyIcon"
             xmlns:Bootstrapper="clr-namespace:MORR.Core.UI">
    <Icon:NotifyIcon x:Name="Icon" Command="{Binding ViewModel.ToggleRecordingCommand}">
        <Icon:NotifyIcon.IconSource>
            <BitmapImage UriSource="Assets/Icon/Icon.ico" />
        </Icon:NotifyIcon.IconSource>
        <Icon:NotifyIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Toggle recording"
                          Command="{Binding ViewModel.ToggleRecordingCommand}" />
                <MenuItem Header="Open recordings directory"
                          Command="{Binding ViewModel.OpenRecordingsDirectoryCommand}" />
                <MenuItem Header="Exit" Command="{Binding ViewModel.ExitCommand}" />
            </ContextMenu>
        </Icon:NotifyIcon.ContextMenu>
    </Icon:NotifyIcon>
</UserControl>